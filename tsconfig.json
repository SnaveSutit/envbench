{
	"include": ["./src/**/*", "./tools/**/*", "./eslint.config.ts"],
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "node",
		"strict": true,
		"types": ["node"],
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,
		"esModuleInterop": true
	}
}
